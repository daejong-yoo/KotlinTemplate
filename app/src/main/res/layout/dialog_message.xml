<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/color_B3747474">

    <View
        android:id="@+id/view_parent"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_dialog_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Message Title"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/view_parent"
        app:layout_constraintRight_toRightOf="@+id/tv_ok"
        app:layout_constraintTop_toTopOf="@+id/view_parent" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="asadfasdfasdfasd"
        android:textColor="@color/color_A1A3A3"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="@+id/tv_ok"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/label_ok"
        android:textColor="@color/color_D22630"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_parent"
        app:layout_constraintRight_toRightOf="@+id/view_parent" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="@string/label_cancel"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ok"
        app:layout_constraintRight_toLeftOf="@+id/tv_ok" />

</androidx.constraintlayout.widget.ConstraintLayout>