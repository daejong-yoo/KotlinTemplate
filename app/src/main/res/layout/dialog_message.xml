<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.example.kotlintemplate.common.OnSingleClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dialog_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Message Title"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Message Title" />

            <TextView
                android:id="@+id/tv_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="Message message message message"
                android:textColor="@color/color_A1A3A3"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_title"
                app:layout_constraintRight_toRightOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                tools:text="Message message message message Message message message message Message message message message Message message message message" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:onClick="@{v -> listener.onClick(v)}"
                android:text="@string/label_ok"
                android:textColor="@color/color_D22630"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_sub"
                tools:text="@string/label_ok" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:onClick="@{v -> listener.onClick(v)}"
                android:text="@string/label_cancel"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@+id/tv_ok"
                app:layout_constraintTop_toTopOf="@+id/tv_ok" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>